{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <form action="{{ path('app_register') }}" method="POST">
            <div class="form-group">
                <label for="registrationForm_email">Email:</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'registrationForm_email'}}) }}
            </div>

            <div class="form-group">
                <label for="registrationForm_plainPassword">Password:</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'registrationForm_plainPassword'}}) }}
            </div>

            <div class="form-group">
                <label for="registrationForm_firstName">First Name:</label>
                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'id': 'registrationForm_firstName'}}) }}
            </div>

            <div class="form-group">
                <label for="registrationForm_lastName">Last Name:</label>
                {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'id': 'registrationForm_lastName'}}) }}
            </div>

            <div class="form-group">
                <label for="registrationForm_phone">Phone:</label>
                {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control', 'id': 'registrationForm_phoneNumber'}}) }}
            </div>

            <button type="submit" class="btn">Register</button>
        </form>
    </div>
{% endblock %}
