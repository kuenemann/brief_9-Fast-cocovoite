
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
       {#  <h1>Register</h1> #}

        <form action="{{ path('app_register') }}" method="POST">
            <div class="form-group">
                <label for="registrationForm_email">Email:</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'registrationForm_email'}}) }}
            </div>

            <div class="form-group">
                <label for="registrationForm_plainPassword">Password:</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'registrationForm_plainPassword'}}) }}
            </div>

            <div class="form-group">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'id': 'registrationForm_agreeTerms'}}) }}
                <label for="registrationForm_agreeTerms">
J'accepte les termes et conditions</label>
            </div>

            <button type="submit" class="btn">Register</button>
        </form>
    </div>
{% endblock %}
